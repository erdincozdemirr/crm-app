{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "warn",
        "class-methods-use-this": "off",
        "consistent-return": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "no-continue": "off"
    }
}