{
  "name": "mini-crm",
  "version": "0.1.0",
  "description": "MiniCRM - Yarım kalmış müşteri ve sipariş yönetim sistemi (senaryo için).",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage --coverageDirectory='./tests/reports'",
    "migrate": "sequelize db:migrate",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\""
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "multer": "^2.0.2",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.7.4",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.4"
  }
}